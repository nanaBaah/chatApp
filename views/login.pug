doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Login
        link(href='./css/bootstrap.min.css', rel='stylesheet')
    body
        nav.navbar.navbar-inverse
            .container-fluid
                .navbar-header
                    a.navbar-brand(href='#') Chat App
                ul.nav.navbar-nav
                    li.active
                        a(href='#') Login
        .container

            form(action='/login', method='post')
                .form-group
                    label(for='usr') Username:
                    input#usr.form-control(type='text', name='username')
                .form-group
                    label(for='pwd') Password:
                    input#pwd.form-control(type='password', name='password')
                div
                    input(type='submit', value='Log in')
